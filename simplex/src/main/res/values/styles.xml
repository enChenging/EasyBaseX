<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="QmuiAppTheme" parent="QmuiTheme">
        <item name="qmui_skin_support_topbar_bg">?attr/app_primary_color</item>
        <item name="qmui_skin_support_topbar_separator_color">
            ?attr/qmui_skin_support_color_separator
        </item>
        <item name="qmui_skin_support_topbar_title_color">?attr/app_text_white_color</item>
        <item name="qmui_skin_support_topbar_subtitle_color">?attr/app_text_white_color</item>
        <item name="qmui_skin_support_topbar_image_tint_color">?attr/app_content_bg_primary_color
        </item>
        <item name="QMUITopBarStyle">@style/QDTopBar</item>
        <item name="qmui_config_color_blue">@color/colorPrimary</item>
    </style>


    <style name="image_view_scale_text" parent="@style/wrap_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
