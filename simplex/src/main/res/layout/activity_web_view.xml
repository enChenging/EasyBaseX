<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.release.simplex.widget.ProgressActivity xmlns:progressActivity="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        progressActivity:errorBackgroundColor="@color/page_bg"
        progressActivity:errorButtonTextColor="@color/color9b"
        progressActivity:errorContentTextColor="@color/color9b"
        progressActivity:errorTitleTextColor="@color/color9b"
        progressActivity:loadingBackgroundColor="@color/page_bg">

        <WebView
            android:id="@+id/wv_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />
    </com.release.simplex.widget.ProgressActivity>

</LinearLayout>
